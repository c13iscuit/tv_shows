<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div>

<div>
  Characters:
  <% @characters.each do |character| %>
    <p><%= "#{character.name}, played by #{character.actor_name} on #{character.description}" %></p>
  <% end %>
</div>

<p>Add a character:</p>
<%= form_for [@television_show, @character] do |f|%>
<%= f.label :name, 'Character' %>
<%= f.text_field :name %>
<%= f.label :actor_name, 'Actor Name' %>
<%= f.text_field :actor_name %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.submit("Submit") %>
<% end %>
